#CanvasExample3:
<CanvasExample3>:
    canvas:
        # here Color is global property
        Color:
        # by default a=1
            rgba: 1,0,0,0.5 #rgb: 1,0,0
        Line:
            circle: (100,200,100) # center_x, center_y, radius
            width: 3
        Color:
            rgb: 1,0.5,0
        Line:
            ellipse: (300,200,100,200) # center_x, center_y, radius_x, radius_y
            width: 3
        Line:
            rectangle: (500,100,100,150) # x,y, w,h
            width: 3
