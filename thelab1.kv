#CanvasExample1:
# Variables in .kv file
#: set s dp(150) 
<CanvasExample1>:
#Don't forget indentation
    canvas:
        Rectangle:

            # self.center se below-left corner center pr hoga
            pos: self.center_x-s/2, self.center_y-s/2 #dp(100), dp(200)
            size: s,s #dp(150), dp(150)

        Ellipse:
            pos: 100, 300
            size: s, s/2 # s= width, s/2 height    

        Line: 
            #points: (0, 0, 100,100, 200,0, self.width, 100, 200, self.height)  # (x1, y1) -> (x2, y2) -> (x3, y3) .. . 
            points: (0, 0, self.width/4,100, self.width/2,0, self.width*3/4, 100, self.width,0)  # (x1, y1) -> (x2, y2) -> (x3, y3) .. . 
            
            width: 3 # Line ki motai

